# MongoDB
MONGO_URI=mongodb+srv://cluster.mongodb.net/your-database
MONGO_USER=your-username
MONGO_PASSWORD=your-password

# Kinde Auth
# Get these from https://kinde.com - Settings > Applications > Your App
KINDE_CLIENT_ID=your-client-id
KINDE_CLIENT_SECRET=your-client-secret
KINDE_ISSUER_URL=https://your-app.kinde.com
KINDE_SITE_URL=http://localhost:3000
KINDE_POST_LOGOUT_REDIRECT_URL=http://localhost:3000
KINDE_POST_LOGIN_REDIRECT_URL=http://localhost:3000/dashboard

# External API (for Raspberry Pi sign, etc.)
# Generate a secure random key for this
EXTERNAL_API_KEY=your-external-api-key
